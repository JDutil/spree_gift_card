<% content_for :page_title do %>
  <%= Spree.t(:gift_cards) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:new_gift_card), new_object_url, :icon => 'icon-plus' %>
  </li>
<% end %>

<% content_for :table_filter_title do %>
  <h2>Testing</h2>
<% end %>

<table class="index">
  <thead>
    <tr>
      <th><%= Spree.t(:code) %></th>
      <th><%= Spree.t(:original_value) %></th>
      <th><%= Spree.t(:current_value) %></th>
      <th><%= Spree.t(:email) %></th>
      <th><%= Spree.t(:name) %></th>
      <th><%= Spree.t(:note) %></th>
      <th class="actions" width="100"></th>
    </tr>
  </thead>
  <tbody>
    <% @gift_cards.each do |card| %>
      <tr id="<%= spree_dom_id card %>">
        <td><%= card.code %></td>
        <td><%= number_to_currency card.original_value %></td>
        <td><%= number_to_currency card.current_value %></td>
        <td><%= card.email %></td>
        <td><%= card.name %></td>
        <td><%= card.note %></td>
        <td class="actions">
          <%= link_to_edit card, :no_text => true if can?(:edit, card) %>
          &nbsp;
          <%= link_to_delete card, :no_text => true if can?(:delete, card) %>
          &nbsp;
          <% if can?(:manage, card) %>
            <% if card.current_value > 0 %>
              <%=
                link_to_with_icon(
                  'icon-void',
                  Spree.t(:void_card),
                  void_admin_gift_card_path(card),
                  no_text: true, method: :put,
                  data: { confirm: Spree.t(:gift_card_void_confirm) }
                )
                %>
            <% else %>
              <%=
                link_to_with_icon(
                  'icon-check',
                  Spree.t(:restore_card),
                  restore_admin_gift_card_path(card),
                  no_text: true, method: :put,
                  data: { confirm: Spree.t(:gift_card_restore_confirm) }
                )
                %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @gift_cards %>
