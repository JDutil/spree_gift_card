<fieldset id="general_fields">
  <legend><%= t(:gift_card) %></legend>
  <%= f.field_container :name do %>
    <%= f.label :name, t(:name) %>
    <%= f.text_field :name %>
  <% end %>
  <%= f.field_container :email do %>
    <%= f.label :email, t(:Email) %>
    <%= f.text_field :email %>
  <% end %>
  <%= f.field_container :note do %>
    <%= f.label :name, t(:note) %>
    <%= f.text_field :note %>
  <% end %>
  <%= f.field_container :variant_id do %>
    <%= f.label :variant_id, t(:value) %>
    <%= f.select :variant_id, @gift_card_variants.map { |v| [number_to_currency(v.price), v.id] }, {}, disabled: (f.object.present? && !f.object.new_record?) %>
  <% end %>
</fieldset>
